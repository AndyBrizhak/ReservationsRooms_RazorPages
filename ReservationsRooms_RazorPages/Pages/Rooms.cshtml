@page 
@* "{id:int?}/{status?}" *@
@model Reservations.Pages.RoomsModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Rooms List</h2>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width:80%">
		<thead>
			<tr>
				<th>
					Room Name
				</th>
				<th>
					Current Status
				</th>
				<th>
					Change Status
				</th>
			</tr>
		</thead>
		<tbody>
				@foreach (var obj in Model.Rooms)
				{
					<tr>
					<td width="10%" id="@obj.Id">
						 @obj.Id
					</td>
					<td width="100%" class="btn btn-info" @* style="display:none" *@ 
                    					@* id="@obj.Id:@obj.Status" *@>
						@obj.Status 
					</td>
					<td width="60%">
						<div class="col">
							@if(@obj.Status!="available")
							{
								<div class="col-3 btn btn-success 
										id="@obj.Id:available"">
									To Available
								</div>
							}
							@if (@obj.Status != "cleaning")
							{
								<div class="col-3 btn btn-warning 
								id="@obj.Id:cleaning"">
									To Cleaning
								</div>
							}
							@if (@obj.Status != "busy")
							{
								<div class="col-3 btn btn-danger 
								 id="@obj.Id:busy"">
									To Busy
								</div>
							}
							
							@if (@obj.Status != "renovation")
							{
								<div class="btn btn-secondary 
								id="@obj.Id:renovation"">
									To Renovation
								</div>
							}
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<script	src="~/js/signalr.js"></script>
<script src="~/js/updateStatusRoom.js"></script>
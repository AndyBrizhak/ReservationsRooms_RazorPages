@page
@model Reservations.Pages.RoomsModel
@{
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Rooms List</h2>
		</div>
		@* <div class="col-6">

		</div> *@
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Room Name
				</th>
				<th>
					Change Status
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.Rooms)
			{
				<tr>
					<td width="20%">@obj.Name</td>
					<td width="80%"></td>
				</tr>
			}

		</tbody>
	</table>

</div>
@page
@model Reservations.Pages.RoomsModel
@{
}
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Rooms List</h2>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width:80%">
		<thead>
			<tr>
				<th>
					Room Name
				</th>
				<th>
					Current Status
				</th>
				<th>
					Change Status
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.Rooms)
			{
				<tr>
					<td width="20%">@obj.Name</td>
					<td width="20%">@obj.Status</td>
					<td width="60%">
						<div class="col">
							<a class="col-3 btn btn-success">
								To Available
							</a>
							<a class="col-3 btn btn-warning">
								To Cleaning
							</a>
							<a class="col-3 btn btn-danger">
								To Busy
							</a>
							<a class="btn btn-secondary">
								To Renovation
							</a>



						</div>
					</td>
				</tr>
			}

		</tbody>
	</table>

</div>